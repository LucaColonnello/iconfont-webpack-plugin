{
	"compilerOptions": {
		"allowJs": true,
		"noEmit": true,
		"target": "es6",
		"lib": ["es6"],
		"rootDir": "./",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"inlineSources": true,
		"types": ["node"],
		"maxNodeModuleJsDepth": 2,
		"skipLibCheck": true
	},
	"lib": ["es6", "es7"],
	"exclude": [
		"**/node_modules/**/*",
		"**/test/**/*",
	]
}
